<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_deleteBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rowDeleteBackground">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/listRow_swipeIconMargin"
            app:srcCompat="@drawable/ic_delete_white_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_doneBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rowDoneBackground">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/listRow_swipeIconMargin"
            app:srcCompat="@drawable/ic_done_white_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rowBackground"
        android:paddingStart="@dimen/listRow_paddingStart"
        android:paddingEnd="@dimen/listRow_paddingEnd"
        android:paddingTop="@dimen/listRow_paddingTop"
        android:paddingBottom="@dimen/listRow_paddingBottom">

        <TextView
            android:id="@+id/textView_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />
    </RelativeLayout>
</FrameLayout>
